<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>SearchPageServlet</servlet-name>
  	<display-name>SearchPageServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.SearchPageServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ResultsPageServlet</servlet-name>
	<servlet-class>servlets.ResultsPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecipeDetailsPageServlet</servlet-name>
    <display-name>RecipeDetailsPageServlet</display-name>
    <description></description>
    <servlet-class>servlets.RecipeDetailsPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RestaurantDetailsPageServlet</servlet-name>
    <display-name>RestaurantDetailsPageServlet</display-name>
    <description></description>
    <servlet-class>servlets.RestaurantDetailsPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListManagementPageServlet</servlet-name>
    <display-name>ListManagementPageServlet</display-name>
    <description></description>
    <servlet-class>servlets.ListManagementPageServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>printableVersionRestaurantServlet</servlet-name>
  	<display-name>printableVersionRestaurantServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.printableVersionRestaurantServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RestaurantDetailsPagePrintableVersionServlet</servlet-name>
  	<display-name>RestaurantDetailsPagePrintableVersionServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.RestaurantDetailsPagePrintableVersionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RecipeDetailsPagePrintableVersionServlet</servlet-name>
  	<display-name>RecipeDetailsPagePrintableVersionServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.RecipeDetailsPagePrintableVersionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DisplayGroceryList</servlet-name>
  	<display-name>DisplayGroceryList</display-name>
  	<description></description>
  	<servlet-class>servlets.DisplayGroceryList</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteFromGroceriesServlet</servlet-name>
  	<display-name>DeleteFromGroceriesServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.DeleteFromGroceriesServlet</servlet-class>
  </servlet>
  
    <!-- Require HTTPS for everything except /img (favicon) and /css. -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOnly</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOrHTTP</web-resource-name>
            <url-pattern>*.ico</url-pattern>
            <url-pattern>/img/*</url-pattern>
            <url-pattern>/css/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
